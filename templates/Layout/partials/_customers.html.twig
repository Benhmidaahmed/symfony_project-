<div id="dynamic-content"><div class="recentCustomers">
    <div class="cardHeader">
        <h2>Recent Customers</h2>
        <a href="#" class="btn">View All</a>
    </div>
    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Roles</th>
                <th>Verified</th>
            </tr>
        </thead>
        <tbody>
            {% for user in users %}
                <tr>
                    <td>{{ user.id }}</td>
                    <td>{{ user.email }}</td>
                    <td>{{ user.first_name }}</td>
                    <td>{{ user.last_name }}</td>
                    <td>{{ user.roles | join(', ') }}</td>
                    <td>{{ user.is_verified ? 'Yes' : 'No' }}</td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">No customers found</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
</div>
