<div class="form-container " id="form">
    {{ form_start(form) }}
       
        <h2>Formulaire des rendez-vous</h2>
        <div class="form-group">
            {{ form_row(form.client, {'attr': {'class': 'form-control'}}) }}
        </div>
        
        <div class="form-group">
            {{ form_row(form.date, {'attr': {'class': 'form-control'}}) }}
        </div>
        
        <div class="form-group">
            {{ form_row(form.status, {'attr': {'class': 'form-control'}}) }}
        </div>
        
        <div class="form-group">
            {{ form_row(form.created_at, {'attr': {'class': 'form-control'}}) }}
        </div>
        
        <div class="form-group">
            {{ form_row(form.updated_at, {'attr': {'class': 'form-control mb-3'}}) }}
        </div>
        
        <button class="btn btn-primary ">{{ button_label|default('Save') }}</button>
    {{ form_end(form) }}
</div>
