{% extends 'Layout/base.html.twig' %}

{% block title %}Inscription{% endblock %}

{% block navbar %}{% endblock %}
{% block carousel %}{% endblock %}

{% block body %}
<div class="login-form1">

    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">
            {{ flash_error }}
        </div>
    {% endfor %}

    <h1 class="mb-4 text-center">Inscription</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
    <div class="form-group mb-3">
    {{ form_row(registrationForm.cin, {
        'attr': {'class': 'form-control', 'placeholder': 'Entrez votre NUM TEL'},
        'label': 'NUM TEL'
    }) }}
</div>
        <div class="form-group mb-3">
            {{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Entrez votre email'}}) }}
        </div>
        <div class="form-group mb-3">
            {{ form_row(registrationForm.firstName, {
                'label': 'Prénom',
                'attr': {'class': 'form-control', 'placeholder': 'Entrez votre prénom'}
            }) }}
        </div>
        <div class="form-group mb-3">
            {{ form_row(registrationForm.lastName, {
                'label': 'Nom',
                'attr': {'class': 'form-control', 'placeholder': 'Entrez votre nom'}
            }) }}
        </div>
        <div class="form-group mb-3">
            {{ form_row(registrationForm.plainPassword, {
                'label': 'Mot de passe',
                'attr': {'class': 'form-control', 'placeholder': 'Entrez votre mot de passe'}
            }) }}
        </div>
        <div class="form-group mb-3">
            {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
        </div>

        <button type="submit" class="btn btn-primary btn-block">S'inscrire</button>
        <a href="{{ path('app_login') }}" class="btn btn-secondary btn-block">Se connecter</a>
    {{ form_end(registrationForm) }}
</div>

{% endblock %}

{% block footer %}{% endblock %}