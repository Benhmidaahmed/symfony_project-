{% extends 'Layout/base.html.twig' %}

{% block title %}Register{% endblock %}

{% block navbar %}{% endblock %}

{% block body %}
<div class="login-form container mt-5">
    {% for flash_error in app.flashes('verify_email_error') %}
        <div class="alert alert-danger" role="alert">
            {{ flash_error }}
        </div>
    {% endfor %}

    <h1 class="mb-4">Register</h1>

    {{ form_errors(registrationForm) }}

    {{ form_start(registrationForm) }}
        <div class="form-group mb-3">
            {{ form_row(registrationForm.email, {'attr': {'class': 'form-control', 'placeholder': 'Enter your email'}}) }}
        </div>
        <div class="form-group mb-3">
            {{ form_row(registrationForm.firstName, {'attr': {'class': 'form-control', 'placeholder': 'Enter your first name'}}) }}
        </div>
        <div class="form-group mb-3">
            {{ form_row(registrationForm.lastName, {'attr': {'class': 'form-control', 'placeholder': 'Enter your last name'}}) }}
        </div>
        <div class="form-group mb-3">
            {{ form_row(registrationForm.plainPassword, {
                'label': 'Password',
                'attr': {'class': 'form-control', 'placeholder': 'Enter your password'}
            }) }}
        </div>
        <div class="form-group mb-3">
            {{ form_row(registrationForm.agreeTerms, {'attr': {'class': 'form-check-input'}}) }}
        </div>

        <button type="submit" class="btn btn-primary btn-block">Register</button>
    {{ form_end(registrationForm) }}
</div>
{% endblock %}

{% block footer %}{% endblock %}
